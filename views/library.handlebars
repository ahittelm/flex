<body>
	<h3>Workouts
			<button type="button" class="btn btn-lg" id="addbtn" aria-label="Left Align">
	  		<span class="glyphicon glyphicon-plus" onclick="editWorkout()" aria-hidden="true"></span></button></h3>

	{{#each workout}}
	<div class="exercise">
		
		  <ul class="list-group" id="workoutList">
		  <li class="list-group-item justify-content-between">
		  	<p class="workoutname"> {{name}} <small class="durationText"> 5 min.</small>
		  	<div class="row">
	    		<div class="col-md-2 col-lg-12">
				<button type="button" class="start-btn" id="start-btn" onclick="startWorkout()" aria-label="Left Align">
				<p>Start Workout</p></button>
				<a href="/addworkout/{{@index}}">
				<button type="button" class="edit-btn" id="editbtn" aria-label="Left Align">
			  		<p>Edit</p>
				</button>	
				</div>
			</div>
				</a>
				{{#each this.exercises}}
				<p class="exercise"> {{exname}} ({{this.time}} {{this.unit}}) </p>
				{{/each}}
		
	  </li>
	  </ul>
		
	{{/each}}

</body>


