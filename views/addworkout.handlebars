<body>


	    <input class="form-control input-lg" id="inputlg" placeholder="Friday Fun" type="text">
  <large> <!--10 min. --></large></br></br>
	<h3>Exercises
		<button type="button" class="btn btn-lg" id="addbtn" aria-label="Left Align">
	  		<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
		</button>
	</h3>
    
    {{#each workout}}
    {{#each this.exercises}}
    <div class="exercise">
		<div class="container">
			<div class="container-fluid" id="individual-exercise">
				<div class="row">
				     <div class="col-11 form-group name-text-box">
		  				<input type="text" class="form-control-lg name-text-box" placeholder=" {{this.exname}}"> 
					 </div>
					 <button type="button" class="col-1 close deletebtn" aria-label="Close">
					  	<span aria-hidden="true">&times;</span>
					 </button>
				</div>
				<div class="row">
				    <div class="col-4 time-text-box">
				    	<div class="form-group time-text-box">
		  					<input type="text" class="form-control-lg time-unit" placeholder="{{this.time}}" >
						</div>
					</div>
				    <div class="col-2">
						<div class="dropdown">
						  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						    {{this.unit}}
						  </button>
						  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
						    <a class="dropdown-item" id="unitDrop" href="#">min</a>
						    <a class="dropdown-item" id="unitDrop" href="#">sec</a>
						  </div>
						</div>
					</div>
				    <div class="col-1">
						<div class="dropdown">
						  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						    {{this.sound}}
						  </button>
						  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
						    <a class="dropdown-item" href="#">Bell</a>
						    <a class="dropdown-item" href="#">Horn</a>
						    <a class="dropdown-item" href="#">Flute</a>
						  </div>
						</div>
					</div>
				    <div class="col-2">
				    </div>
				    <div class="col-1">
						  <button class="save-btn">
						  	Save
						</button>
					</div>

				</div>
			</div>
		</div>
	</div>
	{{/each}}
	{{/each}}

	</br>
	<h3>Repetitions</h3>

	<div class="dropdown">
	  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
	    1
	  </button>
	  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
	  	{{#each time}}
	    <a class="dropdown-item" href="#">{{@key}} {{this}}</a>
	    {{/each}}
	  </div>
	</div>


	<script>
	$( "#dropdownMenuButton1" ).click(function(){
		var cur = $('#dropdownMenuButton1').text();
		if(cur == 'min')
			$('#unitDrop').text('sec');
		else
			$('#unitDrop').text('min');
	});
	</script>

	<script>
	$( "#unitDrop" ).click(function(){
		$('#dropdownMenuButton1').text($('#unitDrop').text());
	});
	</script>

	<script>
	$( "#unitDrop" ).click(function(){
		var cur = $('#unitDrop').text();
		$('#dropdownMenuButton1').text(cur);
	});
	</script>

	<script>
	$( "#dropdownMenuButton2" ).click(function(){
		var cur = $('#unitDrop').text();
		if(cur == 'sec')
			$('#sec').text('sec');
	});
	</script>


	<script href="./routes/addworkout.js" type="text/javascript"></script> 
	<script>
	document.getElementById("addbtn").onclick = function(){
			location.href = "addworkout"
			var length = Object.keys(window.data.workout.exercises).length;
			var exname = "Exercise Name";
			var time = "Time"			
			var sound = "Sound"
			window.data.workout.exercises[length] = {exname, time, unit, sound};
	};	</script>

	<script>
	</script>

